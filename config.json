            "buildPath": "data/",
            "files": [{
                "destination": "tokens.scss",
                "format": "scss/variables"
            }]
        },
        "sms-digital-css": {
            "transforms": ["attribute/cti", "name/cti/kebab", "time/seconds", "content/icon"],
            "buildPath": "data/",
            "files": [{
                "destination": "tokens.css",
                "format": "css/variables"
            }]
        },
        "sms-digital-less": {
            "transforms": ["attribute/cti", "name/cti/kebab", "time/seconds", "content/icon"],
            "buildPath": "data/",
            "files": [{
                "destination": "tokens.less",
                "format": "less/variables"
            }]
        }
    }
}